<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryLight"
    tools:context="com.inducesmile.androidmultiquiz.QuizResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_24sdp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <com.github.pavlospt.CircleView
                    android:id="@+id/pass"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    app:cv_titleSubtitleSpace="40"
                    app:cv_fillColor="@color/colorAccent"
                    app:cv_strokeColorValue="@color/colorPrimaryDark"
                    app:cv_backgroundColorValue="@color/colorPrimaryDark"
                    app:cv_titleColor="@color/colorPrimary"
                    app:cv_titleSize="@dimen/_30sdp"
                    app:cv_titleText="@string/total_best_score"
                    app:cv_subtitleSize="@dimen/_14sdp"
                    app:cv_subtitleText="@string/pass"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/resultText"
                    android:textAlignment="center"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_marginTop="@dimen/_5sdp"/>

            </LinearLayout>



        </LinearLayout>

        <Button
            android:id="@+id/view_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/icons"
            android:text="@string/view_result"
            android:layout_marginTop="@dimen/_40sdp"
            android:background="@drawable/button_selector"
            android:padding="8dp"/>

        <Button
            android:id="@+id/retake_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/icons"
            android:text="@string/retake_quiz"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/button_selector"
            android:padding="8dp"/>
    </LinearLayout>
</ScrollView>
